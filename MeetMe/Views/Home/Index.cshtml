@model List<Meeting>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">MeetMe</h1>
    <p>A website where you can mee me!</p>
</div>
<div class="row">
    @foreach (var meeting in Model)
    {
        <div class="col-md-6 mb-3">
            <div class="card flex-row-reverse">
                <img src="~/img/@meeting.PhotoPath" class="meeting-img" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@meeting.Title</h5>
                    <p class="card-text meeting-desc">@meeting.Description <br /></p>
                    <p class="card-text">
                        <strong>Place:</strong> @meeting.Place <br />
                        <strong>Date:</strong> @meeting.MeetingTime
                    </p>
                </div>
            </div>
        </div>
    }
</div>
